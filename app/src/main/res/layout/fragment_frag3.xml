<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frag3"
    android:orientation="vertical">

    <View
        android:id="@+id/circle"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_white_ring"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selectedTime"
        android:layout_marginTop="200dp"
        android:text="08 : 45 PM"
        android:textColor="@color/black"
        android:textSize="46dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/selectTimeBtn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="77dp"
        android:layout_marginHorizontal="26dp"
        android:backgroundTint="@color/black"
        android:text="시간 변경"
        android:textSize="15dp"
        android:layout_below="@id/circle"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/setAlarmBtn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="26dp"
        android:backgroundTint="@color/black"
        android:layout_below="@id/selectTimeBtn"
        android:layout_centerHorizontal="true"
        android:text="알람 추가"
        android:textSize="15dp"/>

    <Button
        android:id="@+id/cancelAlarmBtn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="26dp"
        android:backgroundTint="@color/black"
        android:layout_below="@id/setAlarmBtn"
        android:layout_centerHorizontal="true"
        android:text="알람 삭제"
        android:textSize="15dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/easter_egg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity=""
        android:elevation="0dp"
        app:elevation="0dp"
        app:backgroundTint="@color/easteregg"/>


</RelativeLayout>